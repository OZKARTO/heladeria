<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/categorias.css">
    <title>MeuNenitas</title>

</head>
<body>
    <nav class="navbar">
        <div class="container-fluid justify-content-center">
            <a href="../admin/index" class="logout">CERRAR</a>
        </div>
    </nav>
    <div class="container-fluid text-center">
        <div class="row">
          <div class="col-12 mt-4 d-flex flex-column align-items-center">
            <h1>categorias</h1>
          </div>
          <div class="col-12 mt-4 d-flex flex-column align-items-center">
            <button type="button" class="btn btn-success" id="crearCate" data-bs-toggle="modal" data-bs-target="#crear">CREAR CATEGORIA</button>
        </div>
          <div class="col-12 mt-4">
            <table class="table table-bordered">
                <thead>
                  <tr class="table-info">
                    <th scope="col">ID-CATEGORIA</th>
                    <th scope="col">CATEGORIA</th>
                    <th scope="col">opciones</th>
                  </tr>
                </thead>
                <tbody id="contenedorCate"> 
                   <!--Aqui se insertan los usuarios-->
                </tbody>
            </table>        
          </div>
        </div>
    </div>

    <!-- Modal crear categoría -->
    <div class="modal fade" id="crear" tabindex="-1" aria-labelledby="crear" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="crear">Crear Nueva Categoría</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="text" id="nuevaCategoria" class="form-control" placeholder="Nombre de la nueva categoría">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" id="btnCrearCategoria" class="btn btn-primary">Crear Categoría</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal editar categoría -->
    <div class="modal fade" id="editar" tabindex="-1" aria-labelledby="editar" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editar">Editar Categoría</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="editarCate">
                    
                </div>
                <div class="modal-footer">
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://kit.fontawesome.com/73ce1381a6.js" crossorigin="anonymous"></script>
    <script src="../../js/categorias.js"></script>
</body>
</html>
